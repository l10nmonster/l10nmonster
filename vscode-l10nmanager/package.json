{
    "name": "l10nmanager",
    "displayName": "L10n Monster Manager",
    "author": "Diego Lagunas",
    "license": "MIT",
    "publisher": "l10nmonster",
    "description": "UI for L10n Monster",
    "version": "0.2.0",
    "engines": {
        "vscode": "^1.97.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "globe.png",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/l10nmonster/l10nmonster.git"
    },
    "type": "module",
    "main": "./out/main.cjs",
    "activationEvents": [
        "workspaceContains:/l10nmonster.config.mjs"
    ],
    "contributes": {
        "configuration": {
            "title": "L10n Monster",
            "type": "object",
            "properties": {
                "l10nmonster.env": {
                    "order": 1,
                    "type": "object",
                    "default": {},
                    "additionalProperties": {
                        "type": "string"
                    },
                    "description": "Environment variables."
                },
                "l10nmonster.prj": {
                    "order": 2,
                    "type": "array",
                    "default": [],
                    "items": {
                        "type": "string"
                    },
                    "uniqueItems": true,
                    "description": "Project names to restrict operations to."
                },
                "l10nmonster.arg": {
                    "order": 3,
                    "type": "string",
                    "description": "Freeform argument to pass to configuration code."
                }
            }
        },
        "commands": [
            {
                "command": "l10nmonster.l10nmanager",
                "title": "L10n Monster Manager"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "l10nmonster",
                    "title": "L10n Monster Manager",
                    "icon": "globe.png"
                }
            ]
        },
        "views": {
            "l10nmonster": [
                {
                    "id": "statusView",
                    "name": "Translation Status",
                    "when": "l10nMonsterEnabled"
                },
                {
                    "id": "jobsView",
                    "name": "Translation Jobs",
                    "when": "l10nMonsterEnabled"
                },
                {
                    "id": "analyzeView",
                    "name": "L10n Monster Analyzers",
                    "visibility": "collapsed",
                    "when": "l10nMonsterEnabled"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "statusView",
                "contents": "Status not available yet."
            },
            {
                "view": "jobsView",
                "contents": "No jobs yet!"
            },
            {
                "view": "analyzeView",
                "contents": "No analyzers available!"
            }
        ]
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node ./test/runTest.js",
        "test-compile": "tsc -p ./",
        "vscode:prepublish": "npm run esbuild-base -- --minify",
        "esbuild-base": "esbuild ./src/index.js --bundle --outfile=out/main.cjs --external:vscode --format=cjs --platform=node",
        "esbuild": "npm run esbuild-base -- --sourcemap",
        "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
        "package": "npm run esbuild-base -- --minify && vsce package"
    },
    "devDependencies": {
        "@electron/rebuild": "^3.7.1",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.x",
        "@types/vscode": "^1.97.0",
        "@vscode/test-electron": "^2.3.0",
        "@vscode/vsce": "^3.2.2",
        "esbuild": "^0.25.0",
        "eslint": "^9.21.0",
        "glob": "^11",
        "mocha": "^11",
        "typescript": "^5.0.4"
    }
}
