{
    "scripts": {
        "test": "pnpm --recursive test && pnpm run test:regression",
        "test:regression": "cd regression && ./test.zsh js local all && ./test.zsh cli local all",
        "eslint": "eslint core/src/**/*.js cli/*.js",
        "eslint:files": "pnpm run eslint | grep -e '^/.*js$'",
        "eslint:files:open": "code $(pnpm run --silent eslint:files)"
    },
    "packageManager": "pnpm@10.12.4",
    "devDependencies": {
        "@eslint/eslintrc": "^3.2.0",
        "@eslint/js": "^9.17.0",
        "globals": "^16"
    }
}
