{
    "name": "l10nmonster-monorepo",
    "private": true,
    "version": "3.0.0",
    "type": "module",
    "workspaces": [
        "core",
        "config-mancer",
        "cli",
        "helpers-android",
        "helpers-anthropic",
        "helpers-deepl",
        "helpers-demo",
        "helpers-googlecloud",
        "helpers-html",
        "helpers-ios",
        "helpers-java",
        "helpers-json",
        "helpers-lqaboss",
        "helpers-openai",
        "helpers-pgsql",
        "helpers-po",
        "helpers-translated",
        "helpers-xliff",
        "server",
        "mcp",
        "kitchensink"
    ],
    "scripts": {
        "test": "npm run check:types:all && npm run eslint:all && npm run test:enhanced && npm run test:regression",
        "test:enhanced": "node scripts/test-runner.js",
        "test:enhanced:fail-fast": "node scripts/test-runner.js --fail-fast",
        "test:enhanced:verbose": "node scripts/test-runner.js --verbose",
        "test:enhanced:unit-only": "node scripts/test-runner.js --unit-only",
        "test:regression": "cd regression && ./test.zsh js local all && ./test.zsh cli local all && ./test.zsh js kitchensink all && ./test.zsh cli kitchensink all",
        "check:types": "cd core && npm run typecheck",
        "check:types:all": "npm run typecheck --workspaces --if-present",
        "eslint": "npm run check:types && eslint core/src/**/*.js cli/*.js",
        "eslint:all": "eslint core/src/**/*.js cli/*.js config-mancer/**/*.js helpers-*/**/*.js server/*.js mcp/*.js --ignore-pattern '**/node_modules/**' --ignore-pattern '**/dist/**'",
        "eslint:files": "npm run eslint | grep -e '^/.*js$'",
        "eslint:files:open": "code $(npm run --silent eslint:files)",
        "publish:npm": "npm publish --workspaces --access public",
        "publish:npm-dry": "npm publish --workspaces --access public --dry-run",
        "publish:next": "npm publish --workspaces --tag next --access public",
        "publish:next-dry": "npm publish --workspaces --tag next --access public --dry-run",
        "release:prepare": "npm_config_legacy_peer_deps=true npm_config_ignore_scripts=true npm_config_workspaces_update=false npm_config_strict_peer_deps=false npm_config_package_lock=false node ./node_modules/.bin/multi-semantic-release --no-ci",
        "release:publish": "node scripts/publish-workspaces.js"
    },
    "packageManager": "npm@10.9.2",
    "devDependencies": {
        "@eslint/eslintrc": "^3.2.0",
        "@eslint/js": "^9.17.0",
        "eslint": "^9.17.0",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/npm": "^12.0.2",
        "@types/node": "^22.19.3",
        "eslint-plugin-promise": "^7.2.1",
        "globals": "^16",
        "multi-semantic-release": "^3.0.2",
        "semantic-release": "^24.2.7"
    }
}
