{
  "name": "@l10nmonster/l10nmonster",
  "version": "0.1.0",
  "description": "Continuous localization for the rest of us",
  "main": "l10n.js",
  "bin": {
    "l10n": "l10n.js"
  },
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "bundle": "esbuild l10n.js --bundle --outfile=bin/l10n.cjs --platform=node --target=node14",
    "build": "pkg -t node16-macos-x64 --out-path bin bin/l10n.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/l10nmonster/l10nmonster.git"
  },
  "keywords": [
    "translation",
    "localization",
    "l10n",
    "globalization",
    "translation-files"
  ],
  "author": "Diego Lagunas",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/l10nmonster/l10nmonster/issues"
  },
  "homepage": "https://github.com/l10nmonster/l10nmonster#readme",
  "dependencies": {
    "@js.properties/properties": "^0.5.4",
    "commander": "^9.0.0",
    "diff": "^5.0.0",
    "fast-xml-parser": "^4.0.3",
    "flat": "^5.0.2",
    "gettext-parser": "^5.0.0",
    "globby": "^13.1.1",
    "got": "^12.0.0",
    "i18n-strings-files": "^1.0.9",
    "knex": "^1.0.3",
    "mysql2": "^2.3.2",
    "nanoid": "^3.2.0",
    "pig-latinizer": "^1.0.6",
    "tinyld": "1.2.0",
    "tmexchange": "l10nmonster/tmexchange",
    "winston": "^3.7.2",
    "words-count": "^2.0.2",
    "xliff": "^6.0.1",
    "xml-formatter": "^2.6.1"
  },
  "devDependencies": {
    "esbuild": "^0.14.23",
    "eslint": "^8.6.0",
    "eslint-plugin-jest": "^26.1.1",
    "jest": "^28",
    "pkg": "^5.4.1"
  },
  "jest": {
    "transform": {},
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "adapters",
      "src"
    ]
  }
}
