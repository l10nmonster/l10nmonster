{
    "version": "3.0.0",
    "workspaces": [
        "core",
        "cli",
        "config-mancer",
        "helpers-*",
        "server"
    ],
    "scripts": {
        "test": "npm run test --workspaces --if-present && npm run test:regression",
        "test:regression": "cd regression && ./test.zsh js local all && ./test.zsh cli local all",
        "eslint": "eslint core/src/**/*.js cli/*.js",
        "eslint:files": "npm run eslint | grep -e '^/.*js$'",
        "eslint:files:open": "code $(npm run --silent eslint:files)",
        "publish:npm": "npm publish --workspaces",
        "publish:npm-dry": "npm publish --workspaces --dry-run"
    },
    "packageManager": "npm@10.9.2",
    "devDependencies": {
        "@eslint/eslintrc": "^3.2.0",
        "@eslint/js": "^9.17.0",
        "globals": "^16"
    }
}
