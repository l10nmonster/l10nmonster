{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": false,
    "noEmit": true,
    "moduleResolution": "nodenext",
    "target": "ES2022",
    "module": "nodenext",
    "resolveJsonModule": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "exclude": [
    "node_modules",
    "**/node_modules",
    "**/test/**",
    "**/tests/**",
    "**/*.test.js",
    "**/*.spec.js",
    "regression/**",
    "samples/**"
  ]
}
