        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage",
        "test:server": "node --test test/*.js",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write \"ui/src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
