    "description": "L10n Monster Manager",
    "type": "module",
    "main": "index.js",
    "dependencies": {
        "@chakra-ui/react": "^3.2.0",
        "@emotion/react": "^11.14.0",
        "cors": "^2.8.5",
        "dotenv": "^17",
